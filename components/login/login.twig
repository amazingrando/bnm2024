{% extends "@components/basic-page/basic-page.twig" %}

{% block mainContent %}

	<form class="bg-white border border-solid border-gold-800 rounded px-4 py-4 lg:px-8 lg:pt-6 lg:pb-8 mb-4 w-full max-w-xl mx-auto">
		<div class="mb-4">
			<label class="block text-gold-1000 text-sm font-bold mb-2" for="username">
				Username
			</label>
			<input class="appearance-none border border-gold-800 rounded w-full py-2 px-3 text-gold-1000 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Username">
		</div>
		<div class="mb-6">
			<label class="block text-gold-1000 text-sm font-bold mb-2" for="password">
				Password
			</label>
			<input class="appearance-none border border-red-600 rounded w-full py-2 px-3 text-gold-1000 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************">
			<p class="text-red-600 text-xs italic">Please choose a password.</p>
		</div>
		<div class="flex items-center justify-between">

			{% include "@components/button/button.twig" with {
        label: 'Login',
        iconAfter: 'fa-solid fa-right-to-bracket',
      } %}

			<a class="inline-block align-baseline font-bold text-sm text-link hover:underline" href="#">
				Forgot Password?
			</a>
		</div>
	</form>
{% endblock %}
